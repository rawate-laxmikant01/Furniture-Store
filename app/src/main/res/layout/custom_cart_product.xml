<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/square"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cart_pname_id"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product name"
                    android:textSize="20sp"
                    android:textColor="@color/textblack"
                    android:fontFamily="sans-serif-condensed-medium"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sub description" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹"
                            android:textColor="@color/textblack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cart_price_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="price"
                            android:textColor="@color/textblack"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-condensed-medium"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/cart_mrp_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="mrp"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cart_discout_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="discount"
                        android:textColor="#1F9105"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="off"
                        android:textColor="#1F9105"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivary date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cart_product_image_id"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="24dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/plus"
                        android:layout_height="24dp"/>


                    <EditText
                        android:id="@+id/default_quantity"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="1"
                        android:background="@drawable/square" />

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_margin="5dp"
                        android:layout_width="24dp"
                        android:background="@drawable/minus"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_removeCart_product_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FB4545"
            android:textColor="#E6FBF9F9"
            android:text="remove"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>